        return soalan_19;

      case 20:
        string soalan_20 = "Saya merasa takut tanpa sebab yang munasabah";
        return soalan_20;

      case 21:
        string soalan_21= "Saya rasa hidup ini tidak bermakna";
        return soalan_21;


      case 22:
        string soalan_tamat= "Soalan Tamat";
        return soalan_tamat;

      default:
        string soalan_tamat1= "Soalan Tamat";
        return soalan_tamat1;
    }
  }
}